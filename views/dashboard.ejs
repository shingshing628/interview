<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Layout</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .h-40vh { height: 325px; }
        .h-60vh { height: 325px; }
        .h-70vh { height: 500px; }
        .h-30vh { height: 150px; }
        .block-content {
            padding: 20px;
            height: 100%;
            display: flex;
            flex-direction: column;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container-fluid p-4">
        <div class="row g-4">
            <!-- Left Block - 25% -->
            <div class="col-3">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="border bg-white rounded shadow-sm h-40vh">
                            <div class="block-content">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h5 class="card-title mb-0">Open Ticket</h5>
                                        <span class="badge bg-primary">Currently</span>
                                    </div>
                                    <div class="text-center py-4">
                                        <h2 class="display-6 mb-2">$54,321</h2>
                                        <p class="text-muted mb-0">total</p>
                                    </div>
                                    <div class="text-center py-4">
                                        <h2 class="display-6 mb-2" style="color:red;">3</h2>
                                        <p class="text-muted mb-0">more than 4 hours</p>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="border bg-white rounded shadow-sm h-60vh">
                            <div class="block-content">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h5 class="card-title mb-0">Performance</h5>
                                        <span class="badge bg-success">This month</span>
                                    </div>
                                    <div class="text-center py-4">
                                        <h2 class="display-6 mb-2">1,234</h2>
                                        <p class="text-muted mb-0">Resolved within 1 day</p>
                                    </div>
                                    <div class="text-center py-4">
                                        <h2 class="display-6 mb-2">73%</h2>
                                        <p class="text-muted mb-0">show in percentage</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Middle Block - 25% -->
            <div class="col-3">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="border bg-white rounded shadow-sm h-70vh">
                            <div class="block-content">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h5 class="card-title mb-0">Cases completed</h5>
                                        <span class="badge bg-warning">This month</span>
                                    </div>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="border bg-white rounded shadow-sm h-30vh">
                            <div class="block-content">
                                <h5 class="card-title mb-0"> Today Ticket</h5>
                                <br>
                                <h1>+20</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Block - 50% -->
            <div class="col-6">
                <div class="border bg-white rounded shadow-sm h-100">
                    <div class="block-content">
                        <h5 class="card-title mb-0">Case last 4 months</h5>
                        <div>
                            <canvas id="myChart"></canvas>
                        </div>
                        <div>
                            <canvas id="summary"></canvas>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    <script>
        const ctx = document.getElementById('myChart');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Red', 'Blue', 'Yellow', 'Green'],
                datasets: [{
                label: '# of Votes',
                data: [12, 19, 3, 5, 2, 3],
                borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>